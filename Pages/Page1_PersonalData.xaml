<Page x:Class="WPF_MultiStepForm.Page1_PersonalData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Page1_PersonalData">
    <StackPanel Margin="20">
        <TextBlock Text="Имя:" />
        <TextBox x:Name="FirstName" />
        <TextBlock Text="Фамилия:" Margin="0,10,0,0"/>
        <TextBox x:Name="LastName" />
        <TextBlock Text="Дата рождения:" Margin="0,10,0,0"/>
        <DatePicker x:Name="BirthDate" />
        <Button Content="Далее" Margin="0,20,0,0" Click="Next_Click" />
    </StackPanel>
</Page>
