<Page x:Class="WPF_MultiStepForm.Page3_Address"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Page3_Address">
    <StackPanel Margin="20">
        <TextBlock Text="Город:" />
        <TextBox x:Name="City" />
        <TextBlock Text="Улица:" Margin="0,10,0,0" />
        <TextBox x:Name="Street" />
        <TextBlock Text="Номер дома:" Margin="0,10,0,0" />
        <TextBox x:Name="House" />
        <TextBlock Text="Квартира (опционально):" Margin="0,10,0,0" />
        <TextBox x:Name="Apartment" />
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="Назад" Click="Back_Click" Margin="0,0,10,0" />
            <Button Content="Отправить" Click="Submit_Click" />
        </StackPanel>
    </StackPanel>
</Page>
